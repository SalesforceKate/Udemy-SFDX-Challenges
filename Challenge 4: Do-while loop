// print all numbers 0 to 100 but
// if num divisible by 3 print 'fizz'
// if num divisible by 5 print 'buzz'
// if num divisible by 3 and 5 print 'fizzbuzz'

Integer num = 0;
    
do{
    if (Math.Mod(num, 3) == 0) {
    	system.debug('fizz');
	} else if (Math.Mod(num, 5) == 0) {
        system.debug('buzz');
    } else if (Math.Mod(num, 3) == 0 && Math.Mod(num, 5) == 0) {
        system.debug('fizzbuzz');
    } else system.debug(num);
    num ++;
}while(num<=100);
